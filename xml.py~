
#!/usr/bin/python
#check the xml syntax

import re

def findfieldCount(line):
    fieldCount = re.match(r"""<entry key=.*fieldCount">(\d*)</entry>""", line)
    return fieldCount
def checkfield(count,line):
    original = re.match(r"""<entry key=.*field\[(\d*)\])">.*</entry>""", line)


xml = open('map.xml')
xmllist = list(xml)

print xmllist[20]
print len(xmllist[2])
print xmllist[2]
print len(xmllist)

i = 0
while True:
    line = xmllist[i]
    if findfieldCount(line) == None:
        i = i + 1
        print i
        continue
    else:
        count = findfieldCount(line).group(1)
        print count
